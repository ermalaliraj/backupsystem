<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
             http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
      version="3.1">
   <enterprise-beans>
		<session>
			<ejb-name>RuCommand</ejb-name>
			<business-remote>com.ea.bs.api.web.cmd.remote.RuCommandRemote</business-remote>
			<ejb-class>com.ea.bs.server.web.cmd.RuCommand</ejb-class>
			<session-type>Stateless</session-type>
		
			<security-role-ref>
				<role-name>APP_ADMIN</role-name>
				<role-link>admin</role-link>
			</security-role-ref>
			<security-role-ref>
				<role-name>APP_ROLE1</role-name>
			</security-role-ref>
			<security-role-ref>
				<role-name>APP_ROLE2</role-name>
			</security-role-ref>
		</session>
	</enterprise-beans>
			
	<assembly-descriptor>
		<security-role>
			<role-name>admin</role-name>
		</security-role>
	
		<method-permission>
			<role-name>admin</role-name>
			<method>
				<ejb-name>RuCommand</ejb-name>
				<method-name>crateNewRu</method-name>
			</method>
			<method>
				<ejb-name>RuCommand</ejb-name>
				<method-name>removeRemoteUnit</method-name>
			</method>
			<method>
				<ejb-name>RuCommand</ejb-name>
				<method-name>getStatus</method-name>
			</method>
			<method>
				<ejb-name>RuCommand</ejb-name>
				<method-name>avviaServizio</method-name>
			</method>
			<method>
				<ejb-name>RuCommand</ejb-name>
				<method-name>stopServizio</method-name>
			</method>
			<method>
				<ejb-name>RuCommand</ejb-name>
				<method-name>getSampleFiles</method-name>
			</method>
		</method-permission>
	</assembly-descriptor>
			
</ejb-jar>